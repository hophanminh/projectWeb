<div class="container">
    <div>
        <p class="h3 d-flex justify-content-center">Product</p>
    </div>
    <div class="form-row align-items-center  d-flex justify-content-end">
        Sort
        <div class="col-auto my-1">
            <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Preference</label>
            <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                <option value="0" selected>All</option>
                <option value="1">Most bid</option>
                <option value="2">Near expired</option>
                <option value="3">Most point</option>
            </select>
        </div>
    </div>
    {{#if this.empty}}
    <div class="card-body">
        <p class="card-text">
            Không có dữ liệu.
        </p>
    </div>
    {{else}}
    <div class="card-body">
        <div class="row">
            {{#each this.products}}
            <div class="col-sm-4 mb-3">
                <div class="card h-100">
                    {{!-- <img src="/imgs/sp/{{ProID}}/main_thumbs.jpg" alt="{{ProName}}" title="{{ProName}}" class="card-img-top"> --}}
                    <div class="card-body">
                        <h6 class="card-title">{{Title}}</h6>
                        <h5 class="card-title text-danger">{{StartBidAmount}}</h5>
                        <p class="card-text">{{TinyDes}}</p>
                        <p>Seller: {{SellerFname}}</p>
                        <a href="#">Bidder with highest price: {{BidderFname}}</a>
                        <p>Start Date: {{AuctionStart}}</p>
                        <span class="d-flex justify-content-end">
                            <div class="card bg-danger text-white">
                                <h5 class="card-title text-center">
                                    <div class="d-flex flex-wrap justify-content-center mt-2">
                                        <a><span class="badge day" id="day"></span></a> :
                                        <a><span class="badge hours" id="hour"></span></a> :
                                        <a><span class="badge min" id="min"></span></a> :
                                        <a><span class="badge sec" id="sec"></span></a>
                                    </div>
                                </h5>
                            </div>
                        </span>
                    </div>
                    <div class="card-footer text-center">
                        <button type="button" class="btn btn-outline-success">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            Details
                        </button>
                        <button type="button" class="btn btn-outline-warning">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            Add to cart
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
</div>


<nav aria-label="Page navigation example" style="margin-top: 10px;">
    <ul class="pagination d-flex justify-content-center">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>

<script src='/js/listProduct.js'></script>