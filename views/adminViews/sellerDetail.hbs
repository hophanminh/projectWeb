<div class="container">
    {{#if this.empty}}
    <div class="card-body">
        <p class="card-text">
            No data available
        </p>
    </div>
    {{else}}
    <div class="card shadow mb-4">
        <h4 class="card-header">
            Seller {{this.seller.SellerID}}
        </h4>
        <div class="card-body">
            <form method="POST">
                <div class="form-group" readonly>
                    <div class="row">
                        <div class="col">
                            <label for="id">ID</label>
                            <input type="text" class="form-control" id="id" name="SellerID" readonly
                                value="{{this.seller.SellerID}}">
                        </div>
                        <div class="col">
                            <label for="username">User name</label>
                            <input type="text" class="form-control" id="username" name="Username"
                                value="{{this.seller.Username}}" readonly>
                        </div>
                        <div class="col">
                            <label for="point">Point</label>
                            <input type="text" class="form-control" id="point" name="Point"
                                value="{{this.seller.Point}}">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="Fname">Full name</label>
                            <input type="text" class="form-control" id="Fname" name="Fname"
                                value="{{this.seller.Fname}}">
                        </div>
                        <div class="col">
                            <label for="Email">Email</label>
                            <input type="text" class="form-control" id="Email" name="Email"
                                value="{{this.seller.Email}}">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="DoB">DoB</label>
                    <input type="text" class="form-control" id="DoB" name="dob_raw" value="{{this.seller.DoB}}">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="Street">Street</label>
                            <input type="text" class="form-control" id="Street" name="Street"value="{{this.seller.Street}}">

                        </div>
                        <div class="col">
                            <label for="District">District</label>
                            <input type="text" class="form-control" id="District" name="District"
                                value="{{this.seller.District}}">
                        </div>
                        <div class="col">
                            <label for="City">City</label>
                            <input type="text" class="form-control" id="City" name="City" value="{{this.seller.City}}">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Phone">Phone</label>
                    <input type="text" class="form-control" id="Phone" name="PhoneNo" value="{{this.seller.PhoneNo}}">
                </div>
                <div class="form-group">
                    <label for="nPS">Number Product Sold not edit</label>
                    <input type="text" class="form-control" id="nPS" name="nPS" placeholder="Enter category name" value="{{this.seller.Point}}">
                </div>
                <a class="btn btn-outline-primary" href="/admin" role="button">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                    Management
                </a>
                <button type="submit" class="btn btn-outline-success" formaction="/admin/modifySeller">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    Modify
                </button>
                <button type="submit" class="btn btn-outline-danger" formaction="/admin/deleteSeller">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                    Delete
                </button>
            </form>
        </div>
    </div>
    {{/if}}
</div>