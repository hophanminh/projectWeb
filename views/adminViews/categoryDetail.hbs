<div class="container">
    <div class="h1 text-center">
        Change Category
    </div>
    <form  method="POST">
        <div class="form-row">
            <div class="col mb-3">
                <label for="Title">Name</label>
                <input type="text" class="form-control" id="Title" name="CatName" value="{{this.category.CatName}}" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>
        <div class="form-group mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck3" required>
                <label class="form-check-label" for="invalidCheck3">
                    I confirm all the information of the product is true
                </label>
                <div class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>
        </div>
        <button class="btn btn-outline-success" type="submit" formaction="/admin/category/{{this.category.CatID}}">Submit</button>
    </form>
</div>