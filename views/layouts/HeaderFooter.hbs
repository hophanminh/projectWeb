<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" type="text/css" href="/css/{{style}}">
    <!--Boostrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- font awesome-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <!-- <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.11/css/mdb.min.css" rel="stylesheet">  -->
    <!-- cdn code.jquery-->
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    {{{_sections.css}}}
</head>

<body>
    {{{_sections.header}}}
    <!-- Nav bar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top mb-10 row">
        <div class="col">
            <form id="frmLogout" method="post" action="/logout"></form>
            <ul class="navbar-nav mr-auto">
                {{#if isAuthenticated}}
                <li class="nav-item dropdown">
                    <a class="nav-item nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-expanded="false">
                        Hi, <b>{{authUser.Username}}!</b>
                    </a>
                    <div class="dropdown-menu dropdown-menu-left" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/user">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            Profile
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/user/changePass">
                            <i class="fa fa-sign-out" aria-hidden="true"></i>
                            Change password
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="javascript: $('#frmLogout').submit();">
                            <i class="fa fa-sign-out" aria-hidden="true"></i>
                            Logout
                        </a>
                    </div>
                </li>
                {{else}}
                <li class="nav-item">
                    <a class="nav-link" href="/signUp">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                {{/if}}
            </ul>
        </div>
        <a class="navbar-brand col" href="/">Bid Web</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse justify-content-between col">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <span><i class="fa fa-home"></i></span> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/FAQ" class="nav-link"> FAQ</a>
                </li>
                {{#if isAuthenticatedSeller}}
                <li class="nav-item">
                    <a href="/seller/addItem" class="nav-link"> Add Item</a>
                </li>
                {{/if}}
                <li class="nav-item">
                    <form class="search" action="/search" method="POST">
                        <input class="search" type="search" name='search' placeholder="Title or Description">
                        <i id="fa-search" class="fa fa-search"></i>
                    </form>
                </li>
            </ul>
        </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-3">
                {{#if isAuthenticated }}
                <div class="card shadow">
                    <h4 class="card-header">
                        {{authUser.Username}}
                    </h4>
                    <div class="list-group list-group-flush">
                        <a href="/user/watchList" class="list-group-item list-group-item-action"> Watch List </a>
                        <a href="/user/bidding" class="list-group-item list-group-item-action"> Bidding List </a>
                        <a href="/user/wonList" class="list-group-item list-group-item-action"> Won list </a>
                        {{#if isAuthenticatedSeller}}
                        <a href="/seller/sellList" class="list-group-item list-group-item-action"> Selling list </a>
                        <a href="/seller/soldList" class="list-group-item list-group-item-action"> Sold list </a>                        {{/if}}
                    </div>
                </div>
                {{/if}}
                <div class="card shadow">
                    <h4 class="card-header">
                        Categories
                    </h4>
                    <div class="list-group list-group-flush">
                        {{#each lcCategory}}
                        <a href="/category/{{CatID}}/product"
                            class="list-group-item list-group-item-action {{#if isActive}} active{{/if}}">
                            {{CatName}}
                            {{#if Total}}
                            <span class="badge badge-danger float-right">{{Total}}</span>
                            {{/if}}
                        </a>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="col-9">
                {{{body}}}
            </div>
        </div>
    </div>
    <hr>
    <footer class="page-footer font-small mdb-color lighten-3 pt-4">

