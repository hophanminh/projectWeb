  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="UserIDFB">User ID</label>
      <input type="text" class="form-control" id="UserIDFB" name="User1ID" value="{{authUser.UserID}}" readonly>
    </div>
    <div class="col-md-6 mb-3">
